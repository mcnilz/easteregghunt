@{
    var size = ViewData["Size"]?.ToString() ?? "normal";
    var text = ViewData["Text"]?.ToString() ?? "LÃ¤dt...";
    var overlay = ViewData["Overlay"]?.ToString() == "true";
    var spinnerClass = size switch
    {
        "small" => "spinner-border-sm",
        "large" => "spinner-border-lg",
        _ => ""
    };
}

@if (overlay)
{
    <div class="loading-overlay" role="status" aria-live="polite" aria-label="@text">
        <div class="loading-spinner-container">
            <div class="spinner-border text-primary @spinnerClass" role="status">
                <span class="visually-hidden">@text</span>
            </div>
            @if (!string.IsNullOrEmpty(text))
            {
                <p class="mt-3 text-white">@text</p>
            }
        </div>
    </div>
}
else
{
    <div class="d-inline-flex align-items-center" role="status" aria-live="polite" aria-label="@text">
        <div class="spinner-border @spinnerClass text-primary me-2" role="status">
            <span class="visually-hidden">@text</span>
        </div>
        @if (!string.IsNullOrEmpty(text))
        {
            <span>@text</span>
        }
    </div>
}









