@model AccessDeniedViewModel
@{
    ViewData["Title"] = "Zugriff verweigert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white text-center">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Zugriff verweigert
                </h4>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-lock fa-4x text-danger"></i>
                </div>
                
                <h5 class="card-title">Sie haben keine Berechtigung</h5>
                <p class="card-text">
                    @Model.Message
                </p>

                @if (!string.IsNullOrEmpty(Model.RequestedUrl))
                {
                    <div class="alert alert-info">
                        <strong>Angeforderte Seite:</strong><br>
                        <code>@Model.RequestedUrl</code>
                    </div>
                }

                <div class="mt-4">
                    <a asp-action="Login" class="btn btn-primary me-2">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Zur Anmeldung
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-home me-2"></i>
                        Zur Startseite
                    </a>
                </div>
            </div>
            <div class="card-footer text-center text-muted">
                <small>
                    <i class="fas fa-info-circle me-1"></i>
                    Kontaktieren Sie den Administrator, wenn Sie Zugriff ben√∂tigen.
                </small>
            </div>
        </div>
    </div>
</div>
