@model LeaderboardViewModel
@{
    ViewData["Title"] = "Leaderboard";
    Layout = "~/Views/Employee/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h1 class="display-4">Leaderboard</h1>
        <p class="lead text-muted">Die besten Finder der aktuellen Kampagnen</p>
    </div>
</div>

@if (Model.Entries.Any())
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Top-Performer</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Platz</th>
                                    <th>Benutzername</th>
                                    <th>Funde</th>
                                    <th>Status</th>
                                    <th>Letzter Fund</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Entries.Count; i++)
                                {
                                    var entry = Model.Entries[i];
                                    var position = i + 1;
                                    var medalClass = position <= 3 ? 
                                        (position == 1 ? "text-warning" : position == 2 ? "text-secondary" : "text-warning") : 
                                        "text-muted";
                                    
                                    <tr class="@(position <= 3 ? "table-warning" : "")">
                                        <td>
                                            @if (position <= 3)
                                            {
                                                <i class="fas fa-medal @medalClass"></i>
                                            }
                                            <strong>@position</strong>
                                        </td>
                                        <td>
                                            <strong>@entry.User.Name</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary fs-6">@entry.FindCount</span>
                                        </td>
                                        <td>
                                            @if (entry.User.IsActive)
                                            {
                                                <span class="badge bg-success">Aktiv</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inaktiv</span>
                                            }
                                        </td>
                                        <td>
                                            <span title="@entry.User.LastSeen.ToString("dd.MM.yyyy HH:mm:ss")">
                                                @entry.User.LastSeen.ToString("dd.MM.yyyy HH:mm")
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Gesamt Teilnehmer</h5>
                    <h2 class="card-text text-primary">@Model.Entries.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Aktive Teilnehmer</h5>
                    <h2 class="card-text text-success">@Model.Entries.Count(e => e.User.IsActive)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Gesamt Funde</h5>
                    <h2 class="card-text text-info">@Model.Entries.Sum(e => e.FindCount)</h2>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info text-center">
                <h4>Keine Teilnehmer vorhanden</h4>
                <p>Es sind noch keine Teilnehmer registriert oder haben Funde gemacht.</p>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Zurück zu Kampagnen
                </a>
            </div>
        </div>
    </div>
}

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Aktionen</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a asp-action="Index" class="btn btn-primary w-100">
                            <i class="fas fa-arrow-left"></i> Zurück zu Kampagnen
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="ScanQrCode" class="btn btn-success w-100">
                            <i class="fas fa-qrcode"></i> QR-Code scannen
                        </a>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-secondary w-100" onclick="location.reload()">
                            <i class="fas fa-sync-alt"></i> Aktualisieren
                        </button>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-info w-100" onclick="shareLeaderboard()">
                            <i class="fas fa-share"></i> Teilen
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function shareLeaderboard() {
            // Sharing functionality can be implemented in future sprints
            alert('Teilen-Funktionalität ist noch nicht implementiert.');
        }

        // Auto-refresh every 30 seconds
        setInterval(function() {
            location.reload();
        }, 30000);
    </script>
}
