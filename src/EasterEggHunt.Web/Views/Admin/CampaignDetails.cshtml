@model EasterEggHunt.Web.Models.CampaignDetailsViewModel
@{
    ViewData["Title"] = "Kampagnen-Details";
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Campaign.Name</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1>@Model.Campaign.Name</h1>
                <p class="lead text-muted">@Model.Campaign.Description</p>
            </div>
            <div>
                @if (Model.Campaign.IsActive)
                {
                    <span class="badge bg-success fs-6">Aktiv</span>
                }
                else
                {
                    <span class="badge bg-secondary fs-6">Inaktiv</span>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">QR-Codes</h5>
                <h2 class="card-text text-primary">@Model.QrCodes.Count</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Funde</h5>
                <h2 class="card-text text-success">@Model.TotalFinds</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Finder</h5>
                <h2 class="card-text text-info">@Model.UniqueFinders</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Erstellt</h5>
                <h6 class="card-text text-muted">@Model.Campaign.CreatedAt.ToString("dd.MM.yyyy")</h6>
                <small class="text-muted">von @Model.Campaign.CreatedBy</small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>QR-Codes</h3>
            <div>
                @if (Model.QrCodes.Any())
                {
                    <button class="btn btn-outline-secondary me-2" onclick="openPrintDialog()">
                        <i class="fas fa-print"></i> Drucken
                    </button>
                }
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addQrCodeModal">
                    <i class="fas fa-plus"></i> QR-Code hinzufügen
                </button>
            </div>
        </div>

        @if (Model.QrCodes.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Titel</th>
                            <th>Interne Notiz</th>
                            <th>Status</th>
                            <th>Sortierung</th>
                            <th>Funde</th>
                            <th>Aktionen</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var qrCode in Model.QrCodes.OrderBy(q => q.SortOrder))
                        {
                            <tr>
                                <td>@qrCode.Title</td>
                                <td>@qrCode.InternalNotes</td>
                                <td>
                                    @if (qrCode.IsActive)
                                    {
                                        <span class="badge bg-success">Aktiv</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inaktiv</span>
                                    }
                                </td>
                                <td>@qrCode.SortOrder</td>
                                <td>
                                    @{
                                        var qrCodeStats = Model.Statistics?.QrCodeStatistics?.FirstOrDefault(s => s.QrCodeId == qrCode.Id);
                                        var findCount = qrCodeStats?.FindCount ?? 0;
                                    }
                                    @if (findCount > 0)
                                    {
                                        <span class="badge bg-success">@findCount</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">0</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" onclick="viewQrCode(@qrCode.Id)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="editQrCode(@qrCode.Id)">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <a href="@Url.Action("QrCodeStatistics", new { id = qrCode.Id })" class="btn btn-sm btn-outline-info" title="Statistiken anzeigen">
                                        <i class="fas fa-chart-bar"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h4>Keine QR-Codes vorhanden</h4>
                <p>Fügen Sie QR-Codes zu dieser Kampagne hinzu, um zu beginnen.</p>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addQrCodeModal">
                    Ersten QR-Code hinzufügen
                </button>
            </div>
        }
    </div>
</div>

<!-- QR-Code hinzufügen Modal -->
<div class="modal fade" id="addQrCodeModal" tabindex="-1" aria-labelledby="addQrCodeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addQrCodeModalLabel">QR-Code hinzufügen</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addQrCodeForm">
                    <div class="mb-3">
                        <label for="qrCodeTitle" class="form-label">Titel</label>
                        <input type="text" class="form-control" id="qrCodeTitle" required>
                    </div>
                    <div class="mb-3">
                        <label for="qrCodeNote" class="form-label">Interne Notiz</label>
                        <textarea class="form-control" id="qrCodeNote" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="qrCodeSortOrder" class="form-label">Sortierung</label>
                        <input type="number" class="form-control" id="qrCodeSortOrder" value="0" min="0">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                <button type="button" class="btn btn-primary" onclick="addQrCode()">Hinzufügen</button>
            </div>
        </div>
    </div>
</div>

<!-- QR-Code Drucken Modal -->
<div class="modal fade" id="printQrCodesModal" tabindex="-1" aria-labelledby="printQrCodesModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="printQrCodesModalLabel">QR-Codes drucken</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="printQrCodesForm">
                    <div class="mb-3">
                        <label class="form-label">QR-Codes auswählen</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="selectAllQrCodes" checked>
                            <label class="form-check-label" for="selectAllQrCodes">
                                Alle QR-Codes auswählen
                            </label>
                        </div>
                        <div class="mt-2" style="max-height: 200px; overflow-y: auto;">
                            @foreach (var qrCode in Model.QrCodes.OrderBy(q => q.SortOrder))
                            {
                                <div class="form-check">
                                    <input class="form-check-input qr-code-checkbox" type="checkbox" value="@qrCode.Id" id="qrCode_@qrCode.Id" checked>
                                    <label class="form-check-label" for="qrCode_@qrCode.Id">
                                        @qrCode.Title
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="qrCodeSize" class="form-label">QR-Code-Größe (Pixel)</label>
                        <input type="range" class="form-range" id="qrCodeSize" min="100" max="400" value="200" step="50">
                        <div class="d-flex justify-content-between">
                            <small>100px</small>
                            <small id="qrCodeSizeValue">200px</small>
                            <small>400px</small>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="showTitles" checked>
                            <label class="form-check-label" for="showTitles">
                                Titel anzeigen
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                <button type="button" class="btn btn-primary" onclick="printSelectedQrCodes()">
                    <i class="fas fa-print"></i> Drucken
                </button>
            </div>
        </div>
    </div>
</div>

<!-- QR-Code Detail Modal -->
<div class="modal fade" id="qrCodeDetailModal" tabindex="-1" aria-labelledby="qrCodeDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="qrCodeDetailModalLabel">QR-Code Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>QR-Code Bild</h6>
                        <div id="qrCodeImage" class="text-center mb-3">
                            <!-- QR-Code wird hier generiert -->
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6>Details</h6>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Titel:</label>
                            <p id="qrCodeTitle" class="mb-2"></p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Interne Notiz:</label>
                            <p id="qrCodeNotes" class="mb-2"></p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Sortierung:</label>
                            <p id="qrCodeSortOrder" class="mb-2"></p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Status:</label>
                            <p id="qrCodeStatus" class="mb-2"></p>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <h6>QR-Code URL</h6>
                        <div class="input-group">
                            <input type="text" class="form-control" id="qrCodeUrl" readonly>
                            <button class="btn btn-outline-primary" type="button" id="copyUrlBtn" onclick="copyQrCodeUrl()">
                                <i class="fas fa-copy"></i> Kopieren
                            </button>
                        </div>
                        <small class="text-muted">Diese URL kann direkt gescannt oder kopiert werden.</small>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
                <button type="button" class="btn btn-primary" onclick="openQrCodeInNewTab()">
                    <i class="fas fa-external-link-alt"></i> In neuem Tab öffnen
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/qrcode.min.js"></script>
    <script>
        // QR-Code Daten für JavaScript verfügbar machen
              const qrCodesData = @Html.Raw(Json.Serialize(Model.QrCodes.Select(q => new {
                  Id = q.Id,
                  Title = q.Title,
                  InternalNotes = q.InternalNotes,
                  SortOrder = q.SortOrder,
                  IsActive = q.IsActive,
                  Code = q.Code ?? ""
              })));

        function viewQrCode(id) {
            console.log('viewQrCode called with id:', id);
            console.log('qrCodesData:', qrCodesData);

            const qrCode = qrCodesData.find(q => q.id === id);
            if (!qrCode) {
                console.error('QR-Code nicht gefunden für ID:', id);
                alert('QR-Code nicht gefunden');
                return;
            }

            console.log('Found QR-Code:', qrCode);

            // Modal mit QR-Code-Daten füllen
            document.getElementById('qrCodeTitle').textContent = qrCode.title;
            document.getElementById('qrCodeNotes').textContent = qrCode.InternalNotes || 'Keine Notiz';
            document.getElementById('qrCodeSortOrder').textContent = qrCode.sortOrder;
            document.getElementById('qrCodeStatus').textContent = qrCode.isActive ? 'Aktiv' : 'Inaktiv';

                  // QR-Code URL generieren - IMMER mit aktueller Domain
                  const baseUrl = window.location.origin;
                  let qrCodeUrl;

                  // Verwende den Code direkt für die URL-Generierung
                  qrCodeUrl = `${baseUrl}/qr/${encodeURIComponent(qrCode.code)}`;

            document.getElementById('qrCodeUrl').value = qrCodeUrl;

            // QR-Code Bild generieren
            const qrCodeImageDiv = document.getElementById('qrCodeImage');
            qrCodeImageDiv.innerHTML = ''; // Clear previous QR code

            // QR-Code mit QRCode.js generieren
            new QRCode(qrCodeImageDiv, {
                text: qrCodeUrl,
                width: 200,
                height: 200,
                colorDark: '#000000',
                colorLight: '#FFFFFF',
                correctLevel: QRCode.CorrectLevel.M
            });

            // Modal anzeigen
            $('#qrCodeDetailModal').modal('show');
        }

        function copyQrCodeUrl() {
            const urlInput = document.getElementById('qrCodeUrl');
            urlInput.select();
            urlInput.setSelectionRange(0, 99999); // Für mobile Geräte

            try {
                document.execCommand('copy');

                // Button-Feedback
                const copyBtn = document.getElementById('copyUrlBtn');
                const originalText = copyBtn.innerHTML;
                copyBtn.innerHTML = '<i class="fas fa-check"></i> Kopiert!';
                copyBtn.classList.remove('btn-outline-primary');
                copyBtn.classList.add('btn-success');

                setTimeout(() => {
                    copyBtn.innerHTML = originalText;
                    copyBtn.classList.remove('btn-success');
                    copyBtn.classList.add('btn-outline-primary');
                }, 2000);

            } catch (err) {
                console.error('Copy failed:', err);
                alert('Kopieren fehlgeschlagen. Bitte manuell kopieren.');
            }
        }

        function openQrCodeInNewTab() {
            const qrCodeUrl = document.getElementById('qrCodeUrl').value;
            window.open(qrCodeUrl, '_blank');
        }

        function editQrCode(id) {
            // QR-Code edit functionality can be implemented in future sprints
            alert('QR-Code bearbeiten: ' + id);
        }

        function addQrCode() {
            // QR-Code add functionality can be implemented in future sprints
            alert('QR-Code hinzufügen');
        }

        function openPrintDialog() {
            $('#printQrCodesModal').modal('show');
        }

        function printSelectedQrCodes() {
            const selectedIds = Array.from(document.querySelectorAll('.qr-code-checkbox:checked'))
                .map(cb => cb.value)
                .join(',');

            const size = document.getElementById('qrCodeSize').value;
            const showTitles = document.getElementById('showTitles').checked;

            if (selectedIds === '') {
                alert('Bitte wählen Sie mindestens einen QR-Code aus.');
                return;
            }

            // Druckansicht in neuem Tab öffnen
            const printUrl = `/Admin/PrintQrCodes?campaignId=@Model.Campaign.Id&qrCodeIds=${selectedIds}&size=${size}&showTitles=${showTitles}`;
            window.open(printUrl, '_blank');

            // Modal schließen
            $('#printQrCodesModal').modal('hide');
        }

        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            // QR-Code-Größe Slider
            const sizeSlider = document.getElementById('qrCodeSize');
            const sizeValue = document.getElementById('qrCodeSizeValue');

            sizeSlider.addEventListener('input', function() {
                sizeValue.textContent = this.value + 'px';
            });

            // Alle QR-Codes auswählen/abwählen
            const selectAllCheckbox = document.getElementById('selectAllQrCodes');
            const qrCodeCheckboxes = document.querySelectorAll('.qr-code-checkbox');

            selectAllCheckbox.addEventListener('change', function() {
                qrCodeCheckboxes.forEach(cb => {
                    cb.checked = this.checked;
                });
            });

            // Einzelne QR-Code-Checkboxes
            qrCodeCheckboxes.forEach(cb => {
                cb.addEventListener('change', function() {
                    const checkedCount = document.querySelectorAll('.qr-code-checkbox:checked').length;
                    const totalCount = qrCodeCheckboxes.length;

                    selectAllCheckbox.checked = checkedCount === totalCount;
                    selectAllCheckbox.indeterminate = checkedCount > 0 && checkedCount < totalCount;
                });
            });
        });
    </script>
}
