@model EasterEggHunt.Web.Models.CreateCampaignViewModel
@{
    ViewData["Title"] = "Neue Kampagne erstellen";
}

<div class="row">
    <div class="col-md-8">
        <h2>Neue Kampagne erstellen</h2>
        <p class="text-muted">Erstellen Sie eine neue Easter Egg Hunt Kampagne</p>

