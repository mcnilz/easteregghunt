@model StatisticsViewModel
@{
    ViewData["Title"] = "Statistiken";
}

<div class="row">
    <div class="col-12">
        <h1>System-Statistiken</h1>
        <p class="lead text-muted">Übersicht über alle Aktivitäten im System</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Kampagnen</h5>
                <h2 class="card-text text-primary">@Model.TotalCampaigns</h2>
                <small class="text-muted">@Model.ActiveCampaigns aktiv</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Benutzer</h5>
                <h2 class="card-text text-success">@Model.TotalUsers</h2>
                <small class="text-muted">@Model.ActiveUsers aktiv</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">QR-Codes</h5>
                <h2 class="card-text text-info">@Model.TotalQrCodes</h2>
                <small class="text-muted">Gesamt erstellt</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Funde</h5>
                <h2 class="card-text text-warning">@Model.TotalFinds</h2>
                <small class="text-muted">Gesamt gefunden</small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Kampagnen-Übersicht</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h3 class="text-primary">@Model.TotalCampaigns</h3>
                        <p class="text-muted">Gesamt</p>
                    </div>
                    <div class="col-6">
                        <h3 class="text-success">@Model.ActiveCampaigns</h3>
                        <p class="text-muted">Aktiv</p>
                    </div>
                </div>
                @if (Model.TotalCampaigns > 0)
                {
                    <div class="progress mb-2">
                        <div class="progress-bar bg-success" role="progressbar" 
                             style="width: @((Model.ActiveCampaigns / (double)Model.TotalCampaigns) * 100)%">
                        </div>
                    </div>
                    <small class="text-muted">
                        @(((Model.ActiveCampaigns / (double)Model.TotalCampaigns) * 100).ToString("F1"))% der Kampagnen sind aktiv
                    </small>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Benutzer-Übersicht</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h3 class="text-primary">@Model.TotalUsers</h3>
                        <p class="text-muted">Gesamt</p>
                    </div>
                    <div class="col-6">
                        <h3 class="text-success">@Model.ActiveUsers</h3>
                        <p class="text-muted">Aktiv</p>
                    </div>
                </div>
                @if (Model.TotalUsers > 0)
                {
                    <div class="progress mb-2">
                        <div class="progress-bar bg-success" role="progressbar" 
                             style="width: @((Model.ActiveUsers / (double)Model.TotalUsers) * 100)%">
                        </div>
                    </div>
                    <small class="text-muted">
                        @(((Model.ActiveUsers / (double)Model.TotalUsers) * 100).ToString("F1"))% der Benutzer sind aktiv
                    </small>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">QR-Code Aktivität</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h3 class="text-info">@Model.TotalQrCodes</h3>
                        <p class="text-muted">QR-Codes</p>
                    </div>
                    <div class="col-6">
                        <h3 class="text-warning">@Model.TotalFinds</h3>
                        <p class="text-muted">Funde</p>
                    </div>
                </div>
                @if (Model.TotalQrCodes > 0)
                {
                    <div class="progress mb-2">
                        <div class="progress-bar bg-warning" role="progressbar" 
                             style="width: @((Model.TotalFinds / (double)Model.TotalQrCodes) * 100)%">
                        </div>
                    </div>
                    <small class="text-muted">
                        @(((Model.TotalFinds / (double)Model.TotalQrCodes) * 100).ToString("F1"))% der QR-Codes wurden gefunden
                    </small>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">System-Status</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>Kampagnen</span>
                    <span class="badge bg-@(Model.ActiveCampaigns > 0 ? "success" : "secondary")">
                        @(Model.ActiveCampaigns > 0 ? "Aktiv" : "Inaktiv")
                    </span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>Benutzer</span>
                    <span class="badge bg-@(Model.ActiveUsers > 0 ? "success" : "secondary")">
                        @(Model.ActiveUsers > 0 ? "Aktiv" : "Inaktiv")
                    </span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>QR-Codes</span>
                    <span class="badge bg-@(Model.TotalQrCodes > 0 ? "info" : "secondary")">
                        @Model.TotalQrCodes
                    </span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>Funde</span>
                    <span class="badge bg-@(Model.TotalFinds > 0 ? "warning" : "secondary")">
                        @Model.TotalFinds
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Aktionen</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a asp-action="Index" class="btn btn-primary w-100">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="CreateCampaign" class="btn btn-success w-100">
                            <i class="fas fa-plus"></i> Neue Kampagne
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Users" class="btn btn-info w-100">
                            <i class="fas fa-users"></i> Benutzer verwalten
                        </a>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-secondary w-100" onclick="refreshStatistics()">
                            <i class="fas fa-sync-alt"></i> Aktualisieren
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function refreshStatistics() {
            location.reload();
        }
    </script>
}
