@model EasterEggHunt.Web.Models.StatisticsViewModel
@{
    ViewData["Title"] = "Statistiken";
}

<div class="row">
    <div class="col-12">
        <h1>System-Statistiken</h1>
        <p class="lead text-muted">Ãœbersicht Ã¼ber alle AktivitÃ¤ten im System</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Kampagnen</h5>
                <h2 class="card-text text-primary">@Model.TotalCampaigns</h2>
                <small class="text-muted">@Model.ActiveCampaigns aktiv</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Benutzer</h5>
                <h2 class="card-text text-success">@Model.TotalUsers</h2>
                <small class="text-muted">@Model.ActiveUsers aktiv</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">QR-Codes</h5>
                <h2 class="card-text text-info">@Model.TotalQrCodes</h2>
                <small class="text-muted">Gesamt erstellt</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Funde</h5>
                <h2 class="card-text text-warning">@Model.TotalFinds</h2>
                <small class="text-muted">Gesamt gefunden</small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-pie"></i> Kampagnen-Verteilung
                </h5>
            </div>
            <div class="card-body">
                @if (Model.TotalCampaigns > 0)
                {
                    <div class="row text-center mb-3">
                        <div class="col-6">
                            <h3 class="text-primary">@Model.TotalCampaigns</h3>
                            <p class="text-muted">Gesamt</p>
                        </div>
                        <div class="col-6">
                            <h3 class="text-success">@Model.ActiveCampaigns</h3>
                            <p class="text-muted">Aktiv</p>
                        </div>
                    </div>
                    <canvas id="campaignsChart" style="max-height: 250px;"></canvas>
                    <small class="text-muted d-block text-center mt-2">
                        @(((Model.ActiveCampaigns / (double)Model.TotalCampaigns) * 100).ToString("F1"))% der Kampagnen sind aktiv
                    </small>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Noch keine Kampagnen vorhanden.
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Benutzer-Ãœbersicht</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h3 class="text-primary">@Model.TotalUsers</h3>
                        <p class="text-muted">Gesamt</p>
                    </div>
                    <div class="col-6">
                        <h3 class="text-success">@Model.ActiveUsers</h3>
                        <p class="text-muted">Aktiv</p>
                    </div>
                </div>
                @if (Model.TotalUsers > 0)
                {
                    <div class="progress mb-2">
                        <div class="progress-bar bg-success" role="progressbar"
                             style="width: @((Model.ActiveUsers / (double)Model.TotalUsers) * 100)%">
                        </div>
                    </div>
                    <small class="text-muted">
                        @(((Model.ActiveUsers / (double)Model.TotalUsers) * 100).ToString("F1"))% der Benutzer sind aktiv
                    </small>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-pie"></i> QR-Code Status
                </h5>
            </div>
            <div class="card-body">
                @if (Model.TotalQrCodes > 0)
                {
                    var unfoundCount = Model.UnfoundQrCodesByCampaign.Values.SelectMany(v => v).Count();
                    var foundQrCodes = Model.TotalQrCodes - unfoundCount;
                    <div class="row text-center mb-3">
                        <div class="col-6">
                            <h3 class="text-success">@foundQrCodes</h3>
                            <p class="text-muted">Gefunden</p>
                        </div>
                        <div class="col-6">
                            <h3 class="text-danger">@unfoundCount</h3>
                            <p class="text-muted">Ungefunden</p>
                        </div>
                    </div>
                    <canvas id="qrCodeStatusChart" style="max-height: 250px;"></canvas>
                    <small class="text-muted d-block text-center mt-2">
                        @Model.TotalQrCodes QR-Codes gesamt
                    </small>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Noch keine QR-Codes vorhanden.
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">System-Status</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>Kampagnen</span>
                    <span class="badge bg-@(Model.ActiveCampaigns > 0 ? "success" : "secondary")">
                        @(Model.ActiveCampaigns > 0 ? "Aktiv" : "Inaktiv")
                    </span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>Benutzer</span>
                    <span class="badge bg-@(Model.ActiveUsers > 0 ? "success" : "secondary")">
                        @(Model.ActiveUsers > 0 ? "Aktiv" : "Inaktiv")
                    </span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>QR-Codes</span>
                    <span class="badge bg-@(Model.TotalQrCodes > 0 ? "info" : "secondary")">
                        @Model.TotalQrCodes
                    </span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>Funde</span>
                    <span class="badge bg-@(Model.TotalFinds > 0 ? "warning" : "secondary")">
                        @Model.TotalFinds
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-bar"></i> Top 10 Meist Gefundene QR-Codes
                </h5>
            </div>
            <div class="card-body">
                @if (Model.TopFoundQrCodes.Any())
                {
                    <canvas id="topQrCodesChart" style="max-height: 300px; margin-bottom: 20px;"></canvas>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Rang</th>
                                    <th>QR-Code</th>
                                    <th>Kampagne</th>
                                    <th>Funde</th>
                                    <th>Aktionen</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.TopFoundQrCodes.Count; i++)
                                {
                                    var qrCode = Model.TopFoundQrCodes[i];
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">@(i + 1)</span>
                                        </td>
                                        <td>
                                            <strong>@qrCode.Title</strong>
                                        </td>
                                        <td>@qrCode.CampaignName</td>
                                        <td>
                                            <span class="badge bg-success">@qrCode.FindCount</span>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("QrCodeStatistics", new { id = qrCode.QrCodeId })" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-chart-bar"></i> Statistiken
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Noch keine QR-Codes gefunden.
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle"></i> QR-Code AktivitÃ¤t
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <h3 class="text-info">@Model.TotalQrCodes</h3>
                    <p class="text-muted">QR-Codes gesamt</p>
                </div>
                <div class="text-center mb-3">
                    <h3 class="text-warning">@Model.TotalFinds</h3>
                    <p class="text-muted">Funde gesamt</p>
                </div>
                @if (Model.TotalQrCodes > 0)
                {
                    <div class="progress mb-2">
                        <div class="progress-bar bg-warning" role="progressbar"
                             style="width: @((Model.TotalFinds / (double)Model.TotalQrCodes) * 100)%">
                        </div>
                    </div>
                    <small class="text-muted d-block text-center">
                        @(((Model.TotalFinds / (double)Model.TotalQrCodes) * 100).ToString("F1"))% der QR-Codes wurden gefunden
                    </small>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Ungefundene QR-Codes</h5>
            </div>
            <div class="card-body">
                @if (Model.UnfoundQrCodesByCampaign.Any())
                {
                    @foreach (var campaignGroup in Model.UnfoundQrCodesByCampaign)
                    {
                        <div class="mb-4">
                            <h6 class="text-muted">@campaignGroup.Key (@campaignGroup.Value.Count QR-Codes)</h6>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>QR-Code</th>
                                            <th>Erstellt</th>
                                            <th>Aktionen</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var qrCode in campaignGroup.Value)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@qrCode.Title</strong>
                                                </td>
                                                <td>
                                                    <small class="text-muted">@qrCode.GeneratedAt.ToString("dd.MM.yyyy")</small>
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("QrCodeStatistics", new { id = qrCode.QrCodeId })" class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-chart-bar"></i> Statistiken
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> Alle QR-Codes wurden bereits gefunden! ðŸŽ‰
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    @if (Model.PerformanceMetrics != null)
    {
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tachometer-alt"></i> Performance-Metriken
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card text-center bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">Durchschnittliche Response-Zeit</h6>
                                    <h3 class="@(Model.PerformanceMetrics.AverageResponseTimeMs > 500 ? "text-danger" : Model.PerformanceMetrics.AverageResponseTimeMs > 200 ? "text-warning" : "text-success")">
                                        @Model.PerformanceMetrics.AverageResponseTimeMs.ToString("F0") ms
                                    </h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">API-Calls (letzte Minute)</h6>
                                    <h3 class="text-info">@Model.PerformanceMetrics.ApiCallsLastMinute</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">Langsamste Response</h6>
                                    <h3 class="@(Model.PerformanceMetrics.SlowestResponseTimeMs > 1000 ? "text-danger" : "text-warning")">
                                        @Model.PerformanceMetrics.SlowestResponseTimeMs ms
                                    </h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">Schnellste Response</h6>
                                    <h3 class="text-success">@Model.PerformanceMetrics.FastestResponseTimeMs ms</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (Model.PerformanceMetrics.SlowRequestsCount > 0)
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>@Model.PerformanceMetrics.SlowRequestsCount</strong> langsame Anfragen (> 1s) erkannt.
                        </div>
                    }
                    <small class="text-muted d-block text-center mt-2">
                        Letzte Aktualisierung: @Model.PerformanceMetrics.LastUpdated.ToString("dd.MM.yyyy HH:mm:ss") UTC
                    </small>
                </div>
            </div>
        </div>
    }
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Aktionen</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a asp-action="Index" class="btn btn-primary w-100">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="CreateCampaign" class="btn btn-success w-100">
                            <i class="fas fa-plus"></i> Neue Kampagne
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Leaderboard" class="btn btn-warning w-100">
                            <i class="fas fa-trophy"></i> Rangliste
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="TimeBasedStatistics" class="btn btn-info w-100">
                            <i class="fas fa-chart-line"></i> Zeitbasierte Statistiken
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Users" class="btn btn-info w-100">
                            <i class="fas fa-users"></i> Benutzer verwalten
                        </a>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-secondary w-100" onclick="refreshStatistics()">
                            <i class="fas fa-sync-alt"></i> Aktualisieren
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Chart.js Konfiguration
        Chart.defaults.font.family = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif";
        Chart.defaults.plugins.legend.display = true;
        Chart.defaults.plugins.legend.position = 'top';

        // Kampagnen-Verteilung (Pie Chart)
        @if (Model.TotalCampaigns > 0)
        {
            var inactiveCampaigns = Model.TotalCampaigns - Model.ActiveCampaigns;
            <text>
            const campaignsCtx = document.getElementById('campaignsChart');
            new Chart(campaignsCtx, {
                type: 'pie',
                data: {
                    labels: ['Aktive Kampagnen', 'Inaktive Kampagnen'],
                    datasets: [{
                        data: [@Model.ActiveCampaigns, @inactiveCampaigns],
                        backgroundColor: [
                            'rgba(40, 167, 69, 0.8)',
                            'rgba(108, 117, 125, 0.8)'
                        ],
                        borderColor: [
                            'rgba(40, 167, 69, 1)',
                            'rgba(108, 117, 125, 1)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    const value = context.parsed || 0;
                                    const total = @Model.TotalCampaigns;
                                    const percentage = ((value / total) * 100).toFixed(1);
                                    label += value + ' (' + percentage + '%)';
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
            </text>
        }

        // QR-Code Status (Doughnut Chart)
        @if (Model.TotalQrCodes > 0)
        {
            var unfoundCount = Model.UnfoundQrCodesByCampaign.Values.SelectMany(v => v).Count();
            var foundQrCodes = Model.TotalQrCodes - unfoundCount;
            <text>
            const qrCodeStatusCtx = document.getElementById('qrCodeStatusChart');
            new Chart(qrCodeStatusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Gefundene QR-Codes', 'Ungefundene QR-Codes'],
                    datasets: [{
                        data: [@foundQrCodes, @unfoundCount],
                        backgroundColor: [
                            'rgba(40, 167, 69, 0.8)',
                            'rgba(220, 53, 69, 0.8)'
                        ],
                        borderColor: [
                            'rgba(40, 167, 69, 1)',
                            'rgba(220, 53, 69, 1)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    const value = context.parsed || 0;
                                    const total = @Model.TotalQrCodes;
                                    const percentage = ((value / total) * 100).toFixed(1);
                                    label += value + ' (' + percentage + '%)';
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
            </text>
        }

        // Top QR-Codes (Bar Chart)
        @if (Model.TopFoundQrCodes.Any())
        {
            var topTen = Model.TopFoundQrCodes.Take(10).ToList();
            <text>
            const topQrCodesCtx = document.getElementById('topQrCodesChart');
            const topQrCodesData = {
                labels: [
                    @foreach (var qrCode in topTen)
                    {
                        @:"@Html.Raw(qrCode.Title.Length > 20 ? qrCode.Title.Substring(0, 20) + "..." : qrCode.Title)",
                    }
                ],
                datasets: [{
                    label: 'Anzahl Funde',
                    data: [@string.Join(",", topTen.Select(q => q.FindCount))],
                    backgroundColor: 'rgba(255, 193, 7, 0.8)',
                    borderColor: 'rgba(255, 193, 7, 1)',
                    borderWidth: 2
                }]
            };

            new Chart(topQrCodesCtx, {
                type: 'bar',
                data: topQrCodesData,
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.parsed.x + ' Funde';
                                }
                            }
                        }
                    }
                }
            });
            </text>
        }

        function refreshStatistics() {
            location.reload();
        }
    </script>
}
