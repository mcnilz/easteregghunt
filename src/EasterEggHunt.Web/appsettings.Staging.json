{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=easteregghunt_staging.db"
  },
  "EasterEggHunt": {
    "Database": {
      "Provider": "SQLite",
      "ConnectionString": "Data Source=easteregghunt_staging.db"
    },
    "Security": {
      "RequireHttps": true,
      "AllowedOrigins": [
        "https://staging.yourdomain.com"
      ]
    },
    "Features": {
      "EnableDetailedErrors": true,
      "EnableSensitiveDataLogging": false
    },
    "Performance": {
      "EnableResponseCompression": true,
      "EnableResponseCaching": false,
      "CacheExpirationMinutes": 1
    },
    "UI": {
      "Title": "Easter Egg Hunt System - Staging",
      "CompanyName": "Your Company",
      "SupportEmail": "support@yourdomain.com"
    }
  }
}
